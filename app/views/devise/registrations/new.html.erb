<fieldset>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render layout:  "layouts/formcontainer_layout" do %>
          <%= devise_error_messages! %>

          <div class="row">
            <div class="form-group col-md-6 col-sm-offset-1 col-md-offset-0 col-sm-10">
              <%= f.label :username, { :class => 'control-label col-sm-4 align-right'} %>
              <div class="col-sm-8 col-xs-12 ">
                <%= f.text_field :username, autofocus: true, class: "form-control"%>
              </div>
            </div>
            <div class="form-group col-md-6 col-sm-offset-1 col-md-offset-0 col-sm-10">
              <%= f.label :email , { :class => 'control-label col-sm-4 align-right'}  %>
              <div class="col-sm-8 col-xs-12 ">
                <%= f.email_field :email, autofocus: true, class: "form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 col-sm-offset-1 col-md-offset-0 col-sm-10">
              <%= f.label :password , { :class => 'control-label col-sm-4 align-right'}  %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length.to_s + t("users_admin.min_char")%>)</em>
              <% end %>
              <div class="col-sm-8 col-xs-12 ">
                <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
              </div>
            </div>
            <div class="form-group col-md-6 col-sm-offset-1 col-md-offset-0 col-sm-10">
              <%= f.label :password_confirmation, { :class => 'control-label col-sm-4 align-right'} %>
              <div class="col-sm-8 col-xs-12 ">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 col-sm-offset-1 col-md-offset-0 col-sm-10">
              <%= f.label :rol, { :class => 'control-label col-sm-4 align-right'} %>
              <div class="col-sm-8 col-xs-12 ">
                <%= f.select :rol, t('user.rol').map{|x,y| [ y.capitalize, y ]}, {include_blank: true}, {class: 'form-control'} %>
                <%#= f.number_field :rol, { :class => 'form-control' }%>
              </div>
            </div>
          </div>

          <div class="actions col-xs-12 mt-15">
            <div class="text-right">
              <button class="btn btn-primary btn-default" type="submit"><%= t("botones.guardar") %></button>
              <a href ="<%= users_path %>">
                <button class="btn btn-danger" type="button"><%= t("botones.cancelar") %></button>
              </a>
            </div>
          </div>
      <% end%>
  <% end %>

</fieldset>